generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MenuItem {
  id          String  @id @default(cuid())
  name        String
  description String?
  price       String? // Keeping price as string based on original type
  imageUrl    String? // Store the URL from UploadThing
  category    String? // Optional: To categorize items
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id            String    @id @default(cuid())
  title         String
  description   String?   // Added event description
  date          DateTime  // Use DateTime for date
  time          String?   // Keep time as string for flexibility (e.g., "8 PM - 2 AM")
  featured      Boolean?  @default(false) // Added featured flag
  imageUrl      String?   // Store the URL from UploadThing
  djs           String?   // Could be a comma-separated list or JSON
  specials      String?   // Description of specials
  happyHourTime String?   // e.g., "5 PM - 7 PM"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
